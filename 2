using namespace std;

#include <string>
#include <iostream>

int main() 
{
	string s;
	int z , min , i;

	cout << "S=";
	getline(cin, s);
	z = 0; min = 999999;
	
	for (i = 0; i <= s.size(); i++) 
	{
		if (s[i] != ' ') 
		{ 
		    z++; 
		}
		if (i ==  s.size() - 1 || s[i] == ' ' ) 
		{
			if (z != 0 &&z < min) 
			{
				min = z;
			}
				z = 0;
		}
	}

	cout << "dlina= " << min;

	return 0;
}
